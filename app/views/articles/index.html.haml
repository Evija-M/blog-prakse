=link_to t("sign_up"), new_user_registration_path
=link_to t("log_in"), new_user_session_path
- if current_user
  =link_to t("log_out"), destroy_user_session_path, method: :delete


%h1
  =t("all_articles")
%p 
  =Article.public_count 
  =t("public_articles")
%p
  =Article.private_count 
  =t("private_articles")
%p
  =Article.archived_count 
  =t("archived_articles")
%ul
  - @articles.each do |article|
    - unless article.archived? 
      %li=link_to article.title, article

%div
  =link_to t("new_article"), new_article_path
  =link_to t("archived_articles"), showarchived_articles_path(@articles)